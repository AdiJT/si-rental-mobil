<section class="section__container judul__detail__mobil__container">
    <div class="breadcrumbs">
        <a href="detail_mobil.html">Detail Mobil</a>
        <i class="ri-arrow-right-s-line separator"></i>
        <span class="current">Pemesanan</span>
    </div>

    <div class="judul_halaman">
        <h2>Pemesanan</h2>
    </div>
</section>

<section class="section__container pemesanan_container">
    <div class="sisi_kiri_pemesanan col-md-8">
        <!-- Informasi Penyewa -->
        <div class="informasi_penyewa_pemesanan">
            <div class="judul_informasi_penyewa_pemesanan">
                <h3>Data Pribadi Penyewa</h3>
            </div>
            <form>
                <div class="input_grup">
                    <input type="text" name="kode" value="Fridolin Gesira" required />
                    <label for="kode">Nama Lengkap*</label>
                </div>
                <div class="input_grup">
                    <input type="text" name="kode" value="082144711486" required />
                    <label for="kode">Nomor Telepon*</label>
                </div>
                <div class="input_grup">
                    <input type="text" name="kode" value="" required />
                    <label for="kode">Alamat*</label>
                </div>
            </form>
        </div>
        <!-- Informasi Penyewa -->
        <div class="apakah_fasilitas_sopir">
            <div class="judul_apakah_fasilitas_sopir">
                <h3>Fasilitas Sopir</h3>
            </div>
            <form>
                <div class="radio_grup">
                    <input type="radio" id="ya" name="pilihan" value="ya">
                    <label class="ps-1 pe-2" for="ya">Tidak Menggunakan Sopir</label><br>
                    <input class="ps-1" type="radio" id="bukan" name="pilihan" value="bukan" checked>
                    <label class="ps-1" for="bukan">Menggunakan Sopir</label>
                </div>
            </form>
        </div>
        <!-- Informasi Penjemputan -->
        <div class="informasi_penjemputan_pemesanan">
            <div class="judul_informasi_penjemputan_pemesanan">
                <h3>Detail Penjemputan</h3>
            </div>
            <form>
                <label>Tanggal Penjemputan</label>
                <div class="input_grup">
                    <input type="date" name="tanggalLahir" value="2024-11-18" readonly required />
                    <label for="tanggalLahir"></label>
                </div>
                <label>Jam Penjemputan</label>
                <div class="input_grup">
                    <input type="text" id="jam" name="jam" value="12:00" readonly required />
                </div>
                <div class="input_grup">
                    <input type="text" name="kode" value="" required />
                    <label for="kode">Alamat*</label>
                </div>
                <label>Keterangan Tambahan</label>
                <div class="input_grup">
                    <textarea name="alamat" rows="4" required></textarea>
                </div>

            </form>
        </div>
        <!-- Informasi Pengembalian -->
        <div class="informasi_pengembalian_pemesanan">
            <div class="judul_informasi_pengembalian_pemesanan">
                <h3>Detail Pengembalian</h3>
            </div>
            <form>
                <label>Tanggal Pengembalian</label>
                <div class="input_grup">
                    <input type="date" name="tanggalLahir" value="2024-11-18" readonly required />
                    <label for="tanggalLahir"></label>
                </div>
                <label>Jam Pengembalian</label>
                <div class="input_grup">
                    <input type="text" id="jam" name="jam" value="12:00" readonly required />
                </div>
                <div class="input_grup">
                    <input type="text" name="kode" value="" required />
                    <label for="kode">Alamat*</label>
                </div>
                <label>Keterangan Tambahan</label>
                <div class="input_grup">
                    <textarea name="alamat" rows="4" required></textarea>
                </div>

            </form>
        </div>
    </div>
    <div class="sisi_kanan_pemesanan col-md-4">
        <div class="pengsticky">
            <div class="rincian_pesanan_detail_mobil">
                <div class="judul_rincian_pesanan">
                    <h3>Rincian Pesanan</h3>
                </div>
                <div class="isi_rincian_pesanan">
                    <div class="item">
                        <i class="ri-map-pin-line"></i>
                        <p>Dalam Kota</p>
                    </div>
                    <div class="item">
                        <i class="ri-time-line"></i>
                        <p>2 hari Full</p>
                    </div>
                    <div class="item">
                        <i class="ri-calendar-todo-line"></i>
                        <p>12 Desember 2024 - 24 Desember 2024</p>
                    </div>
                </div>
            </div>
            <div class="rincian_harga_detail_mobil">
                <div class="judul_rincian_harga">
                    <h3>Rincian Pesanan</h3>
                </div>
                <div class="isi_rincian_harga">
                    <h5>Harga untuk 2 hari:</h5>
                    <div class="fasilitas_sopir mb-1">
                        <h6>Tanpa Sopir:</h6>
                        <p>Rp.500.000</p>
                    </div>
                    <div class="fasilitas_sopir">
                        <h6>Dengan Sopir:</h6>
                        <p>Rp.700.000</p>
                    </div>
                </div>
            </div>
            <div class="tombol_lanjutkan_pemesanan">
                <a asp-area="" asp-controller="Penyewa" asp-action="Pembayaran" class="btn">Lanjutkan Pembayaran</a>
            </div>
        </div>
    </div>
</section>