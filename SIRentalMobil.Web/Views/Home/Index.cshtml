@{
    ViewData["Title"] = "Home Page";
}

<!--======================================================= HERO =======================================================-->
<div class="header__container" id="home">
    <div class="header__image">
        <img src="assets/header.png" alt="header" />
    </div>
    <div class="header__content">
        <h2>🚗 Rental Mobil Shared Economy Terpercaya di Kupang</h2>
        <h1>SEWA MOBIL MUDAH DAN MURAH</h1>
        <p class="section__description">
            Rental mobil terpercaya di Kupang dengan pilihan kendaraan berkualitas untuk segala kebutuhan Anda. Pesan sekarang, cepat dan mudah!
        </p>
    </div>
</div>
<!--======================================================= AKHIR HERO =================================================-->
<!--======================================================= FILTER MOBIL =======================================================-->
<section class="header__form">
    <form class="pencarian" asp-action="@nameof(MobilController.Pencarian)" asp-area="" asp-controller="Mobil" method="get">
        <div class="input__group">
            <label>Fasilitas Sopir</label>
            <select name="sopir" id="sopir">
                <option value="@true">Dengan Sopir</option>
                <option value="@false">Tanpa Sopir</option>
            </select>
        </div>
        <div class="input__group">
            <label>Area Perjalanan</label>
            <select name="luarKota" id="luarKota">
                <option value="@false">Dalam Kota</option>
                <option value="@true">Luar Kota</option>
            </select>
        </div>
        <div class="input__group">
            <label>Tanggal Mulai</label>
            <input type="text" name="tanggalMulai" value="@DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd", CultureInfo.InvariantCulture)" id="start-date" placeholder="Pilih tanggal mulai" required />
        </div>
        <div class="input__group">
            <label>Tanggal Akhir</label>
            <input type="text" name="tanggalAkhir" value="@DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd", CultureInfo.InvariantCulture)" id="end-date" placeholder="Pilih tanggal akhir" required />
        </div>
        <button class="btn">Cari <i class="ri-search-line"></i></button>
    </form>
</section>
<!--======================================================= AKHIR FILTER MOBIL =======================================================-->
<!--======================================================= BAGAIMANA WEB BEKERJA =======================================================-->
<section class="section__container about__container" id="about">
    <h2 class="section__header">Cara Memesan ?</h2>
    <p class="section__description">
        Pesan mobil dengan cepat dan mudah dengan tahapan-tahapan berikut :
    </p>
    <div class="about__grid">
        <div class="about__card">
            <span><i class="ri-map-pin-2-fill"></i></span>
            <h4>Cari Mobil</h4>
            <p>
                Isi kriteria mobil yang sesuai dengan preferensi anda dan lakukan pencarian.
            </p>
        </div>
        <div class="about__card">
            <span><i class="ri-calendar-event-fill"></i></span>
            <h4>Pilih Mobil</h4>
            <p>
                Pilih salah satu mobil yang sesuai dengan preferensi anda.
            </p>
        </div>
        <div class="about__card">
            <span><i class="ri-roadster-fill"></i></span>
            <h4>Pesan Mobil</h4>
            <p>
                Baca detail mobil, isi formulir pemesanan, dan lakukan pembayaran.
            </p>
        </div>
    </div>
</section>
<!--======================================================= AKHIR BAGAIMANA WEB BEKERJA =======================================================-->
<!--======================================================= SERVICE =======================================================-->
<section class="choose__container" id="choose">
