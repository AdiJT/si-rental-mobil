@model Pesanan

@{
    ViewData["Title"] = "Detail Pemesanan";
}

<section class="section__container pemesanan_container">
    <div class="sisi_kiri_pemesanan col-md-8">
        <!-- Utama Mobil -->
        <div class="utama_mobil">
            <div class="foto_mobil col-md-5">
                <img src="@Model.Mobil.UrlGambar.ToString()" />
            </div>
            <div class="detail_mobil col-md-7">
                <div class="tipe_mobil">
                    <h3>@Model.Mobil.Nama</h3>
                </div>
                <div class="spesifikasi_mobil">
                    <div class="left">
                        <div class="item">
                            <i class="ri-user-line icon"></i>
                            <p>@Model.Mobil.MaksPenumpang Orang</p>
                        </div>
                        <div class="item">
                            <i class="ri-calendar-line icon"></i>
                            <p>@Model.Mobil.Tahun</p>
                        </div>
                        <div class="item">
                            <i class="ri-dashboard-line icon"></i>
                            <p>@Model.Mobil.CC CC</p>
                        </div>
                        <div class="item">
                            <i class="ri-gas-station-line icon"></i>
                            <p>@(Model.Mobil.Sopir ? "Ada Sopir" : "Tidak Ada Sopir")</p>
                        </div>
                        <div class="item">
                            <i class="ri-gas-station-line icon"></i>
                            <p>@(Model.Mobil.LuarKota ? "Luar Kota" : "Dalam Kota")</p>
                        </div>
                    </div>

                    <!-- Kolom Kanan -->
                    <div class="right">
                        <div class="item">
                            <i class="ri-barcode-line icon"></i>
                            <p>@Model.Mobil.NomorPlat</p>
                        </div>
                        <div class="item">
                            <i class="ri-steering-line icon"></i>
                            <p>@Model.Mobil.JenisTransmisi.Humanize()</p>
                        </div>
                        <div class="item">
                            <i class="ri-gas-station-line icon"></i>
                            <p>@Model.Mobil.JenisBensin.Humanize()</p>
                        </div>
                        <div class="item">
                            <i class="ri-gas-station-line icon"></i>
                            <p>Masksimal @Model.Mobil.MaksHariSewa Hari Sewa</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Informasi Penyewa -->
        <div class="informasi_penyewa_pemesanan">
            <div class="judul_informasi_penyewa_pemesanan">
                <h3>Data Pribadi Penyewa</h3>
            </div>
            <label for="kode">Nama Lengkap</label>
            <div class="input_grup">
                <input type="text" name="kode" value="@Model.Penyewa.Nama" readonly />
            </div>
            <label for="kode">Nomor Telepon</label>
            <div class="input_grup">
                <input type="text" name="kode" value="@Model.Penyewa.NoHP" readonly />
            </div>
            <label for="kode">Alamat</label>
            <div class="input_grup">
                <input type="text" name="kode" value="@Model.Penyewa.Alamat" readonly />
            </div>
        </div>
        <!-- Informasi Penyewa -->
        <div class="apakah_fasilitas_sopir">
            <div class="judul_apakah_fasilitas_sopir">
                <h3>Fasilitas Sopir</h3>
            </div>
            <div class="input_grup">
                <input type="text" name="kode" value="@(Model.Sopir ? "Menggunakan Sopir" : "Tidak Menggunakan Sopir")" readonly />
            </div>
        </div>
