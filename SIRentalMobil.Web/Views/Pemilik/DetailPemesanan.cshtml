    </div>
    <div class="sisi_kanan_pemesanan col-md-4">
        <div class="pengsticky">
            <div class="rincian_pesanan_detail_mobil">
                <div class="judul_rincian_pesanan">
                    <h3>Rincian Pesanan</h3>
                </div>
                <div class="isi_rincian_pesanan">
                    <p>Status : @Model.Status.Humanize()</p>
                    <div class="item">
                        <i class="ri-map-pin-line"></i>
                        <p>@(Model.LuarKota ? "Luar Kota" : "Dalam Kota")</p>
                    </div>
                    <div class="item">
                        <i class="ri-time-line"></i>
                        <p>@Model.JumlahHariSewa hari Full</p>
                    </div>
                    <div class="item">
                        <i class="ri-calendar-todo-line"></i>
                        <p>@Model.TanggalAwalSewa.ToString("dd MMMM yyyy", Localization.CultureInfo) - @Model.TanggalAkhirSewa.ToString("dd MMMM yyyy", Localization.CultureInfo)</p>
                    </div>
                </div>
            </div>
            <div class="rincian_harga_detail_mobil">
                <div class="judul_rincian_harga">
                    <h3>Rincian Pesanan</h3>
                </div>
                <div class="isi_rincian_harga">
                    <div class="fasilitas_sopir">
                        <h5>Tarif/Hari:</h5>
                    </div>
                    @if (Model.LuarKota)
                    {
                        <div class="fasilitas_sopir">
                            <h5>Luar Kota</h5>
                            <p>@((Model.Mobil.Tarif + Pesanan.TarifLuarKota).ToString("C2", Localization.CultureInfo))</p>
                        </div>
                    }
                    else
                    {
                        <div class="fasilitas_sopir">
                            <h5>Dalam Kota</h5>
                            <p>@Model.Mobil.Tarif.ToString("C2", Localization.CultureInfo)</p>
                        </div>
                    }

                    @if (Model.Sopir)
                    {
                        <div class="fasilitas_sopir">
                            <h5>Tarif Sopir</h5>
                            <p>@Pesanan.TarifSopir.ToString("C2", Localization.CultureInfo)</p>
                        </div>
                    }

                    <div class="fasilitas_sopir">
                        <h5>Tarif Aplikasi</h5>
                        <p>@Pesanan.TarifAplikasi.ToString("C2", Localization.CultureInfo)</p>
                    </div>
                    <div class="fasilitas_sopir">
                        <h6>Total Harga untuk @Model.JumlahHariSewa hari:</h6>
                        <p>@Model.TotalHarga.ToString("C2", Localization.CultureInfo)</p>
                    </div>
                </div>
            </div>
            @if (Model.Status == StatusPesanan.BelumDiterima)
            {
                <div class="tombol_lanjutkan_pemesanan">
                    <a class="btn btn-hijau mb-1" asp-action="@nameof(PemilikController.TerimaPesanan)" asp-route-id="@Model.Id">Terima Pemesanan</a>
                    <a class="btn btn-merah" asp-action="@nameof(PemilikController.TolakPesanan)" asp-route-id="@Model.Id">Tolak Pemesanan</a>
                </div>
            }
        </div>
    </div>
</section>